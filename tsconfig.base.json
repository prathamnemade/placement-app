{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@placement-app/shared/storybook": [
        "libs/shared/storybook/src/index.ts"
      ],
      "@placement-app/shared/assets": [
        "libs/shared/assets/src/index.ts"
      ],
      "@placement-app/shared/styles": [
        "libs/shared/styles/src/index.ts"
      ],
      "@placement-app/shared/checkbox": [
        "libs/shared/checkbox/src/index.js"
      ],
      "@placement-app/shared/progress": [
        "libs/shared/progress/src/index.js"
      ],
      "@placement-app/shared/tags": [
        "libs/shared/tags/src/index.js"
      ],
      "@placement-app/shared/input": [
        "libs/shared/input/src/index.js"
      ],
      "@placement-app/shared/typography": [
        "libs/shared/typography/src/index.js"
      ],
      "@placement-app/shared/buttons": [
        "libs/shared/buttons/src/index.js"
      ],
      "@placement-app/shared/headers": [
        "libs/shared/headers/src/index.js"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}